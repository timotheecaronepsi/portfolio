{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}{{ certification.nom }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('certification') }}
{% endblock %}

{% block body %}
	<div
		class="container mt-5">
		<!-- Nom de la certification -->
		<h2 class="text-center titre_certification tb mb-4">
			<strong>{{ certification.nom }}</strong>
		</h2>

		{# 
																	<div class="row align-items-center mt-4">
																		<div class="col-md-8 pe-4 description_stage">
																			<p class="text-desc">{{ stage.description }}</p>
																		</div>
														
																		<div class="col-md-4 text-center">
																			<img src="{{ asset('img/stage/' ~ (stage.image)) }}" alt="{{ stage.nom }}" class="project-image img-fluid rounded">
																		</div>
																	</div> #}

		<div class="row align-items-center mt-4">
			<div class="col-md-8 pe-4 description_certification">
				<p class=" text-desc mb-4">{{ certification.description }}</p>
			</div>
			<div class="col-md-4 text-center">
				<img src="{{ asset('img/certification/' ~ certification.image) }}" alt="{{ certification.nom }}" class="certification-image">
			</div>
		</div>

		<!-- Date d'obtention et URL -->
		<div class="d-flex justify-content-between align-items-center mb-4">
			<p class=" mb-0 tb">
				<strong>Date d'obtention :
				</strong>
				{{ certification.dateObtention }}</p>

			{% if certification.url %}
				<a href="{{ certification.url }}" class="btn btn-primary" target="_blank">Consulter la plateforme du certificat</a>
			{% endif %}
		</div>

		<!-- Bouton pour télécharger le certificat -->
		{% if certification.certificat %}
			<div
				class="row mt-5">
				<!-- Bouton Consulter -->
				<div class="col-4 d-flex justify-content-center align-items-center mb-3">
					<a href="{{ path('app_certification_consulter', {'id': certification.id}) }}" target="_blank" class="btn custom-btn w-100">
						Consulter mon certificat
					</a>
				</div>

				<!-- Texte "et / ou" -->
				<div class="col-4 d-flex justify-content-center align-items-start mb-3 text-eo">
					<p class="m-0">et / ou</p>
				</div>

				<!-- Bouton Télécharger -->
				<div class="col-4 d-flex justify-content-center align-items-center mb-3">
					<a href="{{ path('app_certification_telecharger', {'id': certification.id}) }}" class="btn custom-btn w-100">
						Télécharger mon certificat
					</a>
				</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
